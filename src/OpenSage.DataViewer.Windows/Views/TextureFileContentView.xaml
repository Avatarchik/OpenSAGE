<UserControl x:Class="OpenSage.DataViewer.Views.TextureFileContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:graphics="clr-namespace:LLGfx.Hosting;assembly=LLGfx"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Background="LightGray" Padding="6" BorderBrush="Gray" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Mip Slice: " VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding MipMapLevels}" SelectedItem="{Binding SelectedMipMapLevel}" />
            </StackPanel>
        </Border>
        <graphics:GraphicsDeviceControl x:Name="GraphicsDeviceControl" 
                                        Grid.Row="1"
                                        RedrawsOnTimer="True"
                                        GraphicsInitialize="OnGraphicsInitialize"
                                        GraphicsDraw="OnGraphicsDraw" />
    </Grid>
</UserControl>
